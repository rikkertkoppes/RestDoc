<style type="text/css">
    html, body {
        font-family: verdana;
        font-size: 12px;
    }
    div {
        border: 1px solid silver;
        background-color: whitesmoke;
        border-radius: 4px;
        margin: 10px;
    }
    h3,h4,p {
        margin: 0;
        padding: 5px;
    }
    h3 {
        border-bottom: 1px solid silver; 
    }
    h4 {

    }
</style>

<h1>{{title}}</h1>
<h2>{{host}}</h2>

{{#each sections}}
<div>
    <h3>{{method}} {{path}}</h3>
    <h4>Request</h4>
    {{#each request}}
        <p>{{name}}: {{value}}</p>
    {{/each}}
    <p>{{requestText}}</p>
    <h4>Response {{responseStatus}}</h4>
    {{#each response}}
        <p>{{name}}: {{value}}</p>
    {{/each}}
    <p>{{responseText}}</p>
</div>
{{/each}}